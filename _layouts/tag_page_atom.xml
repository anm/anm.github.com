---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  <title><![CDATA[Alistair MacLeod, MM0HAI: Posts tagged {{page.tag}}]]></title>

  <link href="{{ site.url }}/blog/tag/{{page.tag}}/index.xml" rel="self"/>
  <link href="{{ site.url }}/"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}/blog/tag/{{page.tag}}</id>
  <author>
    <name><![CDATA[{{ site.author | strip_html }}]]></name>
  </author>

  {% for post in site.tags[page.tag] %}
  <entry>
    <title type="html"><![CDATA[{{ post.title | cdata_escape }}]]></title>
    <link href="{{ site.url }}{{ post.url }}"/>
    <link rel="payment" href="https://flattr.com/submit/auto?url={{site.url}}{{post.url}}&amp;user_id=mm0hai" type="text/html" />
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>{{ site.url }}{{ post.id }}</id>
    <content type="html"><![CDATA[{{ post.content | expand_urls: site.url | markdownify | cdata_escape }}]]></content>
  </entry>
  {% endfor %}
</feed>
